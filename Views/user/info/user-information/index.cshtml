@{
  Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User Information</title>
  <link rel="stylesheet" href="/assets/font-awesome/css/font-awesome.min.css" />
  <link rel="stylesheet" href="/assets/styles/globals.css" />
  <link rel="stylesheet" href="/assets/styles/user-information.css" />
  <link rel="stylesheet" href="/assets/styles/header-footer.css" />
  <link rel="stylesheet" href="/info/user-information/styleguide.css" />
  <link rel="stylesheet" href="/assets/styles/style_table.css" />
  <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
</head>

<body>
  <div class="mainpage_user_info">
    <div class="change-info-side">
      <div class="change-info-popup">
        <h4>Thay đổi thông tin</h4>
        <form action="">
          <div>
            <input type="text" name="change-pwd" id="change-pwd">
            <label for="change-pwd">Mật khẩu</label>
          </div>
          <div>
            <input type="text" name="change-email" id="change-email">
            <label for="change-email">Email</label>
          </div>
          <div>
            <input type="text" name="change-dob" id="change-dob">
            <label for="change-dob">Ngày sinh</label>
          </div>
          <div>
            <input type="text" name="change-add" id="change-add">
            <label for="change-add">Địa chỉ</label>
          </div>
          <div>
            <input type="text" name="change-phone" id="change-phone">
            <label for="change-phone">Số điện thoại</label>
          </div>
        </form>
        <div class="btn-group">
          <button type="button" id="confirm-change">Chấp nhận thay đổi</button>
          <button type="button" id="cancel-change">Hủy</button>
        </div>
      </div>
      <div class="success wrapper">
        <h1>Thay đổi thông tin thành công!</h1>
        <div class="text">
          Thông tin đã được cập nhật
        </div>
        <button type="button" id="change-info-done">Xong</button>
      </div>
    </div>
    <div class="rating_wrapper" id="rating_wrapper"></div>
    <div class="title">Thông tin cá nhân</div>
    <div class="content">
      <div class="left_section">
        <div class="left_upper">
          <div class="title_info">THÔNG TIN TÀI KHOẢN</div>
          <div class="upper_rest">
            <div class="title_profile">
              <img class="img" src="/assets/images/profile.png" alt="" />
              <div class="profile_info">
                <div class="name">DuckNo1</div>
                <div class="address">Trường đại học Bách Khoa</div>
              </div>
            </div>
            <div class="contact">
              <span class="email">Email: bruce@yahoo.com</span>
              <span class="phone">SĐT: Bị ẩn</span>
            </div>
            <button class="button" id="change-btn">CHỈNH SỬA THÔNG TIN</button>
          </div>
        </div>
        <div class="order_wrapper">
          <div class="ordered" id="all-bill">
            <div class="rocket_wrapper">
              <img style="width: 32px" src="/assets/images/rocket.png" alt="" />
            </div>
            <div class="ordered_content">
              <div class="num">6</div>
              <div class="text">Tổng số đơn đã đặt</div>
            </div>
          </div>
          <div class="ordered" id="confirm-bill">
            <div class="rocket_wrapper">
              <img style="width: 32px" src="/assets/images/confirm.png" alt="" />
            </div>
            <div class="ordered_content">
              <div class="num">2</div>
              <div class="text">Số đơn đang chờ xác nhận</div>
            </div>
          </div>
          <div class="ordered" id="done-bill">
            <div class="rocket_wrapper">
              <img style="width: 32px" src="/assets/images/done.png" alt="" />
            </div>
            <div class="ordered_content">
              <div class="num">4</div>
              <div class="text">Số đơn đã hoàn thành</div>
            </div>
          </div>
        </div>
      </div>
      <div class="right_section">
        <div class="title_right">LỊCH SỬ GIAO DỊCH</div>
        <div class="table-right"></div>
        <div class="pagination">
          <p class="arrow back">&#129120;</p>
          <p class="current-page"><span>1</span>/<span>1</span></p>
          <p class="arrow forward">&#129122;</p>
        </div>
      </div>
    </div>
  </div>
</body>
<script type="module" src="/context/user-info.js"></script>
