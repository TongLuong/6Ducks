<script>

		function display_bill(billID, status, time, totalPrice, status_show) {
			const selected = ["","","","","",""];
			selected[status]="selected";
			const html =
				' <div class="row" id="bill">' +
				' <div class="cell" data-title="MÃ VẬN ĐƠN" >' + billID + '</div>' +
				'<div class="cell" data-title="TRẠNG THÁI" id="status">' +
				'<select class="status" id="'+billID+'">' +
				'<option value="Confirming" '+ selected[0] +'>Chưa xác nhận</option>' +
				'<option value="Waiting" '+ selected[1] +'>Chờ lấy hàng</option>' +
				'<option value="Delivering" '+ selected[2] +'>Đang vận chuyển</option>' +
				'<option value="Done" '+ selected[3] +'>Đã vận chuyển</option>' +
				'<option value="Cancelled" '+ selected[4] +'>Huỷ đơn hàng</option>' +
				'<option value="Refund" '+ selected[5] +'>Hoàn trả hàng</option>' +
				// 1 status cho option value và 1 status để hiển thị lựa chọn, xem 2 sample ở trên
				'</select>' +
				'</div>' +
				'<div class="cell" data-title="THỜI GIAN">' +
				time +
				'</div>' +
				'<div class="cell" data-title="THANH TOÁN">' + totalPrice + '</div>' +
				'</div > ';
			$('.table').append(html);

			$('.table .row:last-child()').find('.status').on('change', function () {
					var billID = $(this).prop('id');
					var status = this.value;
					$.ajax({
						url: "SellerInfoSeller/UpdateBillStatus",
						data: {
							"billID": billID,
							"status": status
						},
						type:"post",
						success: function () {
							alert("Update successfully");
						},
						error: function () {
							alert("error");
						}
					});
			});
		}

		

		function display_all_bill() {
			$.ajax({
				url: "SellerInfoSeller/DisplayBills",
				success: function (response) {
					$('.table #bill').remove();

					for (let i = 0; i < response.num; i++) {
						display_bill(response.billID[i], response.status[i], response.time[i], response.totalPrice[i]);
					}
				},
				error: function () {
					alert("error");
				}
			});
		}

		const closeButton = document.getElementById("close");
		closeButton.addEventListener("click", () => {
			const tableWrapper = document.getElementById("table_wrapper");
			tableWrapper.style.display = "none";

			// Enable scrolling again
			document.body.style.overflow = "auto";
		});

		// Disable scrolling when the table is visible
		const showButton = document.getElementById("recent_orders");
		showButton.addEventListener("click", () => {
			const tableWrapper = document.getElementById("table_wrapper");
			tableWrapper.style.display = "flex";
			display_all_bill();
			// Disable scrolling
			document.body.style.overflow = "hidden";
		});

		const confirmOrderButtons = document.querySelectorAll(
			'.row .cell[data-title="HÀNH ĐỘNG"]'
		);
		for (const button of confirmOrderButtons) {
			button.addEventListener("click", () => {
				// Change the status text to "Đã nhận"
				const statusText = button.parentNode.querySelector(
					'.cell[data-title="TRẠNG THÁI"]'
				);
				const statusText2 = button.parentNode.querySelector(
					'.cell[data-title="HÀNH ĐỘNG"]'
				);
				statusText.textContent = "Đã nhận";
				statusText2.textContent = "Xem đơn hàng";

				// Change the status text color to #2db223
				statusText.style.color = "#2db223";
			});
		}
	</script>
