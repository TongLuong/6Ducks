          <div class="rate-item">
            <span>1 sao</span>
            <div class="rate-column _1star"></div>
          </div>
        </div>
        <div class="button-box">
          <button type="button" class="show-fb">
            <p>Xem toàn bộ đánh giá</p>
            <ion-icon name="arrow-forward-outline"></ion-icon>
